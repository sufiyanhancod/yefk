{
    "hosting": [
        {
            "target": "prod",
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ],
            "public": "build/web/production",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ]
        }
    ]
}